{% extends 'Layout.html.twig' %}

{% block content %}
    {% include 'FlashMessages.html.twig' %}
<form method="post">
    <input type="text" name="token" value="{{ get_token('submission') }}" hidden="hidden">
    <label for="submission-title">Title</label>
    <input type="text" name="title" id="submission-title"><br>
    <label for="submission-url">Url</label>
    <input type="text" name="url" id="submission-url"><br>
    <input type="submit" value="Submit">
</form>
{% endblock %}